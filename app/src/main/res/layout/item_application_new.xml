<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="400dp"
        android:layout_weight="1"
        android:background="@drawable/background_app_left_item"
        >
        <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:src="@drawable/doctoroncall"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вызов Врача \n на дом"
            android:textColor="#D94E1686"
            android:textSize="12sp"
            android:layout_below="@id/typeIcon"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 декабря \n 09:30 - 10:30"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:minWidth="400dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здесь будет надоевший вам симптом"
            android:textColor="#4E1686"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/trash"
            android:layout_toLeftOf="@+id/trash" />

        <GridView
            android:id="@+id/tag_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/title">
        </GridView>

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Район(ы): Наурызбайский, \n Алматинский"
            android:textSize="12sp"
            android:textColor="#868686"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 отзывов"
            android:textColor="#4E1686"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/trash"
            android:src="@drawable/korzina"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500 тг"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/border"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_above="@+id/response"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>